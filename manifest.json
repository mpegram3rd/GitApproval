{
  "name": "Git Approval",
  "version": "1.0",
  "description": "Git Approval Emoji",
  "manifest_version": 2,
  "background": {
    "scripts":[
      "lib/emojis.js",
      "lib/approval.js",
      "background.js"
    ],
    "persistent" : false
  },
  "page_action" :
  {
    "default_icon" : {
    },
    "default_title" : "Make Approval Emotional"
  },
  "content_scripts" : [{
    "matches" : ["*://*.github.com/**/pull/*"],
    "js" : [
      "lib/emojis.js",
      "lib/approval.js"
    ]
  }],
  "permissions": [
    "activeTab", "tabs", "declarativeContent", "storage"
  ],
  "icons" : {
    "16": "images/icon16.png",
    "24" : "images/icon24.png",
    "32" : "images/icon32.png"
  }
}
